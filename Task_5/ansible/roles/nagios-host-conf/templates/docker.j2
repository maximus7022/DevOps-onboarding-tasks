define host {
    use                             linux-server
    host_name                       docker
    alias                           Remote Docker httpd
    address                         {{ remote_host_ip }}
    max_check_attempts              5
    check_period                    24x7
    notification_interval           30
    notification_period             24x7
}

define hostgroup {
    hostgroup_name          remote-servers
    alias                   Remote machines
    members                 docker
}

define service {
    use                             generic-service
    host_name                       docker
    service_description             PING
    check_command                   check_ping!100.0,20%!500.0,60%
}

define service {
    use                             generic-service
    host_name                       docker
    service_description             HTTP
    check_command                   check_http!8081
}
